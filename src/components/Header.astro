---
import groups from "../content/groups.json";
---

<header>
  <nav>
    <ul>
      {
        groups.map((group) => (
          <li>
            <a href={`/groups/${group.slug}/`}>&nbsp;{group.name}</a>
          </li>
        ))
      }
    </ul>
  </nav>

  <button id="dark-mode-button" type="button"></button>
</header>

<style lang="scss">
  @use "@assets/styles/v";

  header {
    display: flex;
    justify-content: space-between;

    @extend %font-secondary;

    nav {
      flex: 1;
      overflow: hidden;

      a {
        display: block;
        position: relative;
        text-transform: lowercase;
        transition: v.$anime-medium ease;

        &.active {
          transform: translateX(2.5rem);
        }

        &:hover {
          transform: translateX(1.5rem);

          &::after {
            opacity: 1;
          }
        }

        &::after {
          content: "--->"; // forcer espace : \00A0
          position: absolute;
          top: 0;
          left: 0;
          height: 100%;
          font-family: v.$font-arrow-large;
          font-size: 16px;
          transform: translateX(-100%) translateY(3px);
          transition: v.$anime-short ease;
          opacity: 0;
        }

        span {
          font-family: v.$font-arrow-large;
          font-size: 16px;
        }
      }
    }

    button {
      height: 1rem;
      width: 1rem;
      background-color: v.$color-black;
      border: unset;
      border-radius: unset;
      cursor: pointer;
      transition: v.$anime-medium ease;

      &.dark-mode {
        transform: rotateZ(-225deg);
      }
    }
  }
</style>
